{
  "name": "cinema-api",
  "version": "1.0.0",
  "description": "Backend api for cinema service using Express-Typescript",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc",
    "format": "prettier --write '*.{yml,json,md}' '{src,test}/**/*'",
    "start": "node lib/server.js",
    "start:prod": "pm2-runtime lib/server.js",
    "start:dev": "nodemon",
    "test": "jest --preset ts-jest",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "lint": "standard",
    "prestart:dev": "npm run build"
  },
  "author": "masterraf21",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.5",
    "@types/uuid": "7.0.3",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.2"
  },
  "standard": {
    "ignore": ["/lib/**/*.js"]
  }
}
