{
  "name": "cinema-api",
  "version": "1.0.0",
  "description": "Backend api for cinema service using Express-Typescript",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc",
    "format": "prettier --write '*.{yml,json,md}' '{src,test}/**/*'",
    "start": "node lib/server.js",
    "start:prod": "pm2-runtime lib/server.js",
    "start:dev": "nodemon",
    "test": "jest --preset ts-jest",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "lint": "standard",
    "prestart:dev": "npm run build",
    "tester": "ts-node scripts/tester.ts"
  },
  "author": "masterraf21",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.7.0",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.3",
    "nconf": "^0.11.0",
    "typescript": "^4.1.2",
    "uuid": "^8.3.1",
    "uuid4": "^2.0.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.12.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jest": "25.2.1",
    "@types/mongoose": "^5.10.2",
    "@types/nconf": "^0.10.0",
    "@types/node": "13.13.5",
    "@types/uuid": "7.0.3",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.0",
    "tsc-watch": "^4.2.9"
  },
  "standard": {
    "ignore": [
      "/lib/**/*.js"
    ]
  }
}
